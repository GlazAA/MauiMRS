@using MauiSync.Core.Models
@inject NavigationManager NavigationManager
@page "/main-menu"
<!-- 1  -->

<div class="main-menu">
    <h3>Главное меню</h3>
    
    <div class="menu-buttons">
        <button @onclick="() => NavigationManager.NavigateTo('/checklist-creation')" 
                class="menu-btn btn-primary">
            📋 Контрольный лист
        </button>
        
        <button @onclick="() => NavigationManager.NavigateTo('/sheets-management')" 
                class="menu-btn btn-secondary">
            🗂️ Управление листами
        </button>
    </div>
    
    <!-- Временная навигация для тестирования -->
    <div class="test-nav">
        <h4>Тестовые страницы:</h4>
        <button @onclick="() => NavigationManager.NavigateTo('/equipment-types/1')" 
                class="btn btn-sm btn-outline">
            Тест: Типы оборудования
        </button>
    </div>
</div>

<style>
    .menu-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin: 2rem 0;
    }
    
    .menu-btn {
        padding: 1rem 2rem;
        font-size: 1.2rem;
    }
    
    .test-nav {
        margin-top: 3rem;
        padding-top: 1rem;
        border-top: 1px solid #ccc;
    }
</style>