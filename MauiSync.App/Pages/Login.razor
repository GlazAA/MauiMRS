@using MauiSync.Core.Models
@page "/login"
<!-- 0  -->


<h3>Вход в систему</h3>

<div class="auth-container">
    <div class="form-group">
        <label>Логин:</label>
        <input @bind="username" class="form-control" />
    </div>
    <div class="form-group">
        <label>Пароль:</label>
        <input type="password" @bind="password" class="form-control" />
    </div>
    <button @onclick="PerformLogin" class="btn btn-primary">Войти</button>
</div>

@code {
    private string username = "";
    private string password = "";
    
    private void PerformLogin()
    {
        // После успешного входа:
        NavigationManager.NavigateTo("/main-menu");
    }

    [Inject] private NavigationManager NavigationManager { get; set; }
}